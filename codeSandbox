//------useState---------

import { useState } from "react";
import "./styles.css";

export default function App() {
  let [likeCounter, setLikeCounter] = useState(0);

  function likeClickHandler() {
    setLikeCounter(++likeCounter);
  }

  return (
    <div className="App">
      <h1>Inside outtt</h1>
      <button onClick={likeClickHandler}>Like Me!</button> {likeCounter}
    </div>
  );
}

//--------onChange event----------//

import { useState } from "react";
import "./styles.css";

export default function App() {
  let [userInput, setUserInput] = useState('');

  function inputChangeHandler(e){
console.log(e.target.value);
setUserInput(e.target.value);
  }

  return (
    <div className="App">
      <h1>Inside outtt</h1>
      <input onChange={inputChangeHandler}></input>

      <div> Welcome {userInput}</div>
    </div>
  );
}

//-------Interpreting emoji using onChange and useState-------

import { useState } from "react";
import "./styles.css";

const emojiDictionary = {
  'ðŸ˜€':'Smiling',
  'ðŸ˜‚':'Laughing',
  'ðŸ˜Ž':'Awesome',
  'ðŸ˜®':'Disbelief',
  'ðŸ‘»':'Ghost',
  'ðŸ¥°':'Feeling loved',
};

export default function App() {

  let [meaning, setMeaning] = useState('');

  const emojiEventHandler = function(e){
setMeaning(emojiDictionary[e.target.value]);
  }

  return (
    <div className="App">
      <h1>Inside outt! </h1>
      <input onChange={emojiEventHandler}></input>
<div>{meaning}</div>
    </div>
  );
}

//-------Shopping List using Map()-------

const shoppingList = ['Mac','Mouse','Table','Chair','RgbLights'];

export default function App() {
  return (
    <div className="App">
      <h1>My Shopping List</h1>
      <ul>
        {
          shoppingList.map(item => <li> {item} </li>)
        }
      </ul>
    </div>
  );
}

//----------FINAL EMOJI APP------------//

import { useState } from "react";
import "./styles.css";

const emojiDictionary = {
  'ðŸ˜€':'Smiling',
  'ðŸ˜‚':'Laughing',
  'ðŸ˜Ž':'Awesome',
  'ðŸ˜®':'Disbelief',
  'ðŸ‘»':'Ghost',
  'ðŸ¥°':'Feeling loved',
};

const emojis = Object.keys(emojiDictionary);

export default function App() {

  let [meaning, setMeaning] = useState('');

  const emojiEventHandler = function(e){
setMeaning(emojiDictionary[e.target.value]);
  }

  function emojiClickHandler(emoji){
    console.log(emoji);
    setMeaning(emojiDictionary[emoji])
  }

  return (
    <div className="App">
      <h1>Inside outt! </h1>
      <input onChange={emojiEventHandler}></input>
<h2>{meaning}</h2>
<h3 >{emojis.map(emoji=> {
  return <span 
  onClick={()=> emojiClickHandler(emoji)}
  style={{padding:'0.5rem',cursor:'pointer'}} 
  key={emoji}>
  {emoji}
  </span>
})} </h3>
    </div>
  );
}

